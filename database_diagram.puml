@startuml EasyReads Database Diagram

!define COLLECTION_COLOR #E3F2FD
!define FIELD_COLOR #FFF9C4

skinparam linetype ortho
skinparam roundcorner 10
skinparam shadowing false

package "EasyReads MongoDB Database" {
  
  entity "books" COLLECTION_COLOR {
    * _id : ObjectId <<PK>>
    --
    * name : String
    * ISBN : String <<unique>>
    * author : String
    * image_link : String
    * amazon_link : String
    createdAt : Date
    updatedAt : Date
  }
  
  entity "ebooks" COLLECTION_COLOR {
    * _id : ObjectId <<PK>>
    --
    * name : String
    * ISBN : String <<unique>>
    * author : String
    * image_link : String
    amazon_link : String
    createdAt : Date
    updatedAt : Date
  }
  
  entity "audiobooks" COLLECTION_COLOR {
    * _id : ObjectId <<PK>>
    --
    * name : String
    * ISBN : String <<unique>>
    * author : String
    narrator : String
    * image_link : String
    amazon_link : String
    createdAt : Date
    updatedAt : Date
  }
  
  entity "fictionbooks" COLLECTION_COLOR {
    * _id : ObjectId <<PK>>
    --
    * name : String
    * ISBN : String <<unique>>
    * author : String
    * image_link : String
    createdAt : Date
    updatedAt : Date
  }
  
  entity "sciencebooks" COLLECTION_COLOR {
    * _id : ObjectId <<PK>>
    --
    * name : String
    * ISBN : String <<unique>>
    * author : String
    * image_link : String
    createdAt : Date
    updatedAt : Date
  }
  
  entity "biographybooks" COLLECTION_COLOR {
    * _id : ObjectId <<PK>>
    --
    * name : String
    * ISBN : String <<unique>>
    * author : String
    * image_link : String
    createdAt : Date
    updatedAt : Date
  }
  
  entity "fantasybooks" COLLECTION_COLOR {
    * _id : ObjectId <<PK>>
    --
    * name : String
    * ISBN : String <<unique>>
    * author : String
    * image_link : String
    createdAt : Date
    updatedAt : Date
  }
  
  entity "historybooks" COLLECTION_COLOR {
    * _id : ObjectId <<PK>>
    --
    * name : String
    * ISBN : String <<unique>>
    * author : String
    * image_link : String
    createdAt : Date
    updatedAt : Date
  }
  
  entity "technologybooks" COLLECTION_COLOR {
    * _id : ObjectId <<PK>>
    --
    * name : String
    * ISBN : String <<unique>>
    * author : String
    * image_link : String
    createdAt : Date
    updatedAt : Date
  }
  
  entity "romancebooks" COLLECTION_COLOR {
    * _id : ObjectId <<PK>>
    --
    * name : String
    * ISBN : String <<unique>>
    * author : String
    * image_link : String
    createdAt : Date
    updatedAt : Date
  }
  
  entity "users" COLLECTION_COLOR {
    * _id : ObjectId <<PK>>
    --
    * username : String <<unique>>
    * password : String <<hashed>>
    createdAt : Date
    updatedAt : Date
  }
}

note right of books
  **General Books Collection**
  Stores all general books
  with Amazon links
end note

note right of ebooks
  **E-Books Collection**
  Digital books collection
  Amazon link optional
end note

note right of audiobooks
  **Audiobooks Collection**
  Audio book collection
  Includes narrator field
end note

note right of fictionbooks
  **Category Books**
  Fiction, Science, Biography,
  Fantasy, History, Technology,
  Romance collections
  All have same structure
end note

note right of users
  **User Collection**
  Optional MongoDB collection
  Primary auth via Firebase
end note

@enduml

